{
  "name": "browserosaurus",
  "productName": "Browserosaurus",
  "version": "1.0.1",
  "description": "Choose which browser to use when you open a link",
  "homepage": "",
  "main": "src/main.js",
  "scripts": {
    "start": "ENV=DEV electron-forge start",
    "package": "electron-forge package --platform=darwin --arch=x64",
    "make": "electron-forge make",
    "icns": "cd ./src/images/icon && ./png2icns.sh icon.png"
  },
  "repository": "https://github.com/will-stone/browserosaurus",
  "bugs": {
    "url": "https://github.com/will-stone/browserosaurus/issues"
  },
  "keywords": ["Electron", "Browser chooser"],
  "author": "Will Stone",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "7.2.3",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.5.1",
    "babel-preset-react": "^6.24.1",
    "electron-forge": "^3.0.5",
    "electron-prebuilt-compile": "1.6.8",
    "eslint": "3.19.0",
    "eslint-plugin-flowtype": "2.33.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "5.0.1",
    "eslint-plugin-react": "7.0.1",
    "prettier": "^1.4.4"
  },
  "dependencies": {
    "electron-compile": "^6.4.1",
    "jsonpath": "^0.2.11",
    "mousetrap": "^1.6.1",
    "opn": "^5.1.0",
    "xml2json": "^0.11.0"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": ["squirrel"],
        "darwin": ["zip"],
        "linux": ["deb", "rpm"]
      },
      "electronPackagerConfig": {
        "icon": "src/images/icon/icon.icns",
        "ignore": ["docs"],
        "protocols": [
          {
            "name": "HTTP link",
            "schemes": ["http", "https"]
          },
          {
            "name": "File",
            "schemes": ["file"]
          }
        ]
      }
    }
  }
}
