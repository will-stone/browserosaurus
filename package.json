{
  "name": "browserosaurus",
  "version": "18.2.0",
  "description": "The browser prompter for macOS",
  "keywords": [
    "macOS",
    "Electron",
    "Browser chooser"
  ],
  "homepage": "https://wstone.io/browserosaurus",
  "bugs": {
    "url": "https://github.com/will-stone/browserosaurus/issues"
  },
  "repository": "https://github.com/will-stone/browserosaurus",
  "license": "GPL-3.0-only",
  "author": "Will Stone",
  "main": ".webpack/main",
  "scripts": {
    "doctor": "npm run lint && npm run typecheck && npm run test",
    "icns": "cd ./src/shared/static/icon && ../../../../scripts/png2icns.sh icon.png",
    "lint": "eslint . --ignore-path .gitignore",
    "list-apps": "ts-node ./scripts/listInstalledApps",
    "make": "concurrently \"npm:make:*\" --kill-others-on-fail",
    "make:arm": "electron-forge make --skip-package --arch=arm64",
    "make:intel": "electron-forge make --skip-package --arch=x64",
    "notarize": "node ./scripts/notarize.js",
    "prepackage": "rimraf out",
    "package": "npm run package:arm && npm run package:intel",
    "package:arm": "NODE_ENV=production electron-forge package --platform=darwin --arch=arm64",
    "package:intel": "NODE_ENV=production electron-forge package --platform=darwin --arch=x64",
    "prepare": "husky install",
    "release": "bump --commit \"chore: release v\" && npm run doctor && npm run package && npm run notarize && npm run make",
    "start": "ELECTRON_DISABLE_SECURITY_WARNINGS=true electron-forge start",
    "test": "jest",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "website-css:build": "npx tailwindcss -i node_modules/tailwindcss/tailwind.css -o ./docs/style.css --content docs/index.html -m",
    "website-css:watch": "npx tailwindcss -i node_modules/tailwindcss/tailwind.css -o ./docs/style.css --content docs/index.html -m --watch"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "appBundleId": "com.browserosaurus",
        "asar": true,
        "appCategoryType": "public.app-category.developer-tools",
        "packageManager": "npm",
        "extendInfo": "plist/Info.plist",
        "osxSign": {
          "gatekeeper-assess": false,
          "hardened-runtime": true,
          "entitlements": "plist/entitlements.mac.plist",
          "entitlements-inherit": "plist/entitlements.mac.plist"
        },
        "icon": "src/shared/static/icon/icon.icns",
        "protocols": [
          {
            "name": "HTTP link",
            "schemes": [
              "http",
              "https"
            ]
          },
          {
            "name": "File",
            "schemes": [
              "file"
            ]
          }
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.cjs",
            "renderer": {
              "config": "./webpack.renderer.config.cjs",
              "entryPoints": [
                {
                  "html": "./src/renderers/picker/index.html",
                  "js": "./src/renderers/picker/index.tsx",
                  "name": "picker_window",
                  "preload": {
                    "js": "./src/renderers/shared/preload.ts"
                  }
                },
                {
                  "html": "./src/renderers/prefs/index.html",
                  "js": "./src/renderers/prefs/index.tsx",
                  "name": "prefs_window",
                  "preload": {
                    "js": "./src/renderers/shared/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "prettier": "@will-stone/prettier-config",
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/out/"
    ],
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/out/"
    ]
  },
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "@reduxjs/toolkit": "^1.8.2",
    "app-exists": "^2.1.1",
    "axios": "^0.27.2",
    "clsx": "^1.1.1",
    "fast-deep-equal": "^3.1.3",
    "file-icon": "^5.1.0",
    "immer": "^9.0.14",
    "kolorist": "^1.5.1",
    "lowdb": "^3.0.0",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^17.0.2",
    "react-redux": "^8.0.2",
    "redux": "^4.2.0",
    "tidy-url": "^1.3.4",
    "tings": "^4.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@electron-forge/cli": "6.0.0-beta.63",
    "@electron-forge/maker-zip": "6.0.0-beta.63",
    "@electron-forge/plugin-webpack": "6.0.0-beta.63",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.4",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.181",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.41",
    "@types/react-beautiful-dnd": "^13.1.2",
    "@types/react-dom": "^17.0.14",
    "@types/react-redux": "^7.1.23",
    "@will-stone/eslint-config-base": "^1.1.0",
    "@will-stone/eslint-config-jest": "^2.0.0",
    "@will-stone/eslint-config-node": "^2.0.0",
    "@will-stone/eslint-config-prettier": "^2.0.0",
    "@will-stone/eslint-config-react": "^2.0.1",
    "@will-stone/eslint-config-typescript": "^2.0.0",
    "@will-stone/prettier-config": "^6.0.1",
    "concurrently": "^7.1.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.9",
    "electron": "^19.0.1",
    "electron-notarize": "^1.2.1",
    "eslint": "^8.13.0",
    "fork-ts-checker-webpack-plugin": "^7.2.4",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^2.6.0",
    "node-loader": "^2.0.0",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.0.24",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "url-loader": "^4.1.1",
    "version-bump-prompt": "^6.1.0",
    "webpack": "^5.72.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "productName": "Browserosaurus"
}
