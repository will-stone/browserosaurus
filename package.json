{
  "name": "browserosaurus",
  "productName": "Browserosaurus",
  "version": "2.0.0",
  "description": "The browser prompter for macOS",
  "homepage": "http://wstone.io/browserosaurus/",
  "main": "src/main.js",
  "scripts": {
    "prettier": "prettier --config .prettierrc --write src/**/*.js",
    "start": "ENV=DEV electron-forge start",
    "package": "electron-forge package --platform=darwin --arch=x64",
    "make": "electron-forge make",
    "icns": "cd ./src/images/icon && ./png2icns.sh icon.png"
  },
  "repository": "https://github.com/will-stone/browserosaurus",
  "bugs": {
    "url": "https://github.com/will-stone/browserosaurus/issues"
  },
  "keywords": [
    "Electron",
    "Browser chooser"
  ],
  "author": "Will Stone",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "7.2.3",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-react": "^6.24.1",
    "electron-forge": "^4.1.3",
    "electron-prebuilt-compile": "1.7.9",
    "eslint": "3.19.0",
    "eslint-plugin-flowtype": "2.33.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "5.0.1",
    "eslint-plugin-react": "7.0.1",
    "prettier": "^1.10.2"
  },
  "dependencies": {
    "electron-compile": "^6.4.2",
    "electron-store": "^1.3.0",
    "hyperscript": "^2.0.2",
    "jsonpath": "^0.2.11",
    "lodash": "^4.17.4",
    "mousetrap": "^1.6.1",
    "node-fetch": "^1.7.3",
    "opn": "^5.1.0",
    "pretty-checkbox": "^3.0.3",
    "semver": "^5.4.1",
    "sortablejs": "^1.7.0",
    "xml2json": "^0.11.0"
  },
  "config": {
    "forge": {
      "make_targets": {
        "darwin": [
          "dmg"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "yarn",
        "icon": "src/images/icon/icon.icns",
        "ignore": [
          "docs"
        ],
        "protocols": [
          {
            "name": "HTTP link",
            "schemes": [
              "http",
              "https"
            ]
          },
          {
            "name": "File",
            "schemes": [
              "file"
            ]
          }
        ]
      }
    }
  }
}
